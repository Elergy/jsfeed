{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}} {{#jsfeed_item}}link-post{{/jsfeed_item}}">
    <header class="post-header">
        <h2 class="post-title">
            <a href="{{#postInfo}}{{this.url}}{{else}}{{url}}{{/postInfo}}" {{#postInfo}}target="_blank" {{/postInfo}}>
                {{{title}}}
            </a>
        </h2>
    </header>
    <section class="post-excerpt">
        <p>{{content}}
            <a class="read-more" href="{{#postInfo}}{{this.url}}{{else}}{{url}}{{/postInfo}}"  {{#postInfo}}target="_blank" {{/postInfo}}>
            &raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{#postInfo}}
            <span class="footer_author">Author: {{this.author}}</span>
            <!--<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>-->
        {{/postInfo}}
        {{^postInfo}}
            {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
            {{author}}
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        {{/postInfo}}
        {{tags prefix="Tags: "}}
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
